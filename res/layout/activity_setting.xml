<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:coconut="http://schemas.android.com/apk/res/com.coconut.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#aa22ff00"
        android:gravity="center"
        android:text="设置中心"
        android:textColor="#000000"
        android:textSize="25sp" />

    <com.coconut.mobilesafe.ui.SettingItemView
        android:id="@+id/siv_autoupdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        coconut:desc_off="自动更新已关闭"
        coconut:desc_on="自动更新已打开"
        coconut:title="设置自动更新" >
    </com.coconut.mobilesafe.ui.SettingItemView>

    <com.coconut.mobilesafe.ui.SettingItemView
        android:id="@+id/siv_number_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        coconut:desc_off="来电显示已关闭"
        coconut:desc_on="来电显示已打开"
        coconut:title="设置来电显示" >
    </com.coconut.mobilesafe.ui.SettingItemView>

    <com.coconut.mobilesafe.ui.SettingClickView
        android:id="@+id/scv_changebg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        coconut:desc_on="默认颜色"
        coconut:title="设置来电显示背景">

    </com.coconut.mobilesafe.ui.SettingClickView>
    
    <com.coconut.mobilesafe.ui.SettingItemView
        android:id="@+id/siv_blacknumber_deny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        coconut:desc_off="黑名单拦截已关闭"
        coconut:desc_on="黑名单拦截已打开"
        coconut:title="设置黑名单拦截" >
    </com.coconut.mobilesafe.ui.SettingItemView>
    
        <com.coconut.mobilesafe.ui.SettingItemView
        android:id="@+id/siv_applock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        coconut:desc_off="软件加密已关闭"
        coconut:desc_on="软件加密已打开"
        coconut:title="设置软件加密" >
    </com.coconut.mobilesafe.ui.SettingItemView>

</LinearLayout>